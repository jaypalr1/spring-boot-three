<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

  <Properties>
    <Property name="LOG_EXCEPTION_CONVERSION_WORD">%xwEx</Property>
    <Property name="LOG_LEVEL_PATTERN">%5p</Property>
    <Property name="LOG_DATEFORMAT_PATTERN">yyyy-MM-dd'T'HH:mm:ss.SSSXXX</Property>
    <Property name="CONSOLE_LOG_PATTERN">%clr{%d{${sys:LOG_DATEFORMAT_PATTERN}}}{faint}
      %clr{${sys:LOG_LEVEL_PATTERN}} %clr{%pid}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint}
      %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}
    </Property>

    <Property name="FILE_LOG_PATTERN">%d{${LOG_DATEFORMAT_PATTERN}} ${LOG_LEVEL_PATTERN} %pid ---
      [%t] %-40.40c{1.} : %m%n${sys:LOG_EXCEPTION_CONVERSION_WORD}
    </Property>
  </Properties>

  <Appenders>
    <Console follow="true" name="Console" target="SYSTEM_OUT">
      <PatternLayout charset="${sys:CONSOLE_LOG_CHARSET}" pattern="${sys:CONSOLE_LOG_PATTERN}"/>
    </Console>
  </Appenders>

  <Loggers>
    <Logger level="info" name="org.apache.catalina.startup.DigesterFactory"/>
    <Logger level="info" name="org.apache.catalina.util.LifecycleBase"/>
    <Logger level="info" name="org.apache.coyote.http11.Http11NioProtocol"/>
    <Logger level="info" name="org.apache.sshd.common.util.SecurityUtils"/>
    <Logger level="info" name="org.apache.tomcat.util.net.NioSelectorPool"/>
    <Logger level="info" name="org.eclipse.jetty.util.component.AbstractLifeCycle"/>
    <Logger level="info" name="org.hibernate.validator.internal.util.Version"/>
    <Logger level="info" name="org.springframework.boot.actuate.endpoint.jmx"/>

    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>

</Configuration>
